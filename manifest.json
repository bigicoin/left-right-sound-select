{
  "manifest_version": 2,
  "name": "Left Right Sound Select",
  "version": "0.0.1",
  "permissions": [
    "activeTab",
    "tabCapture"
  ],
  "background":{
    "scripts": ["background.js"]
  },
  "externally_connectable": {
    "matches": ["*://*.youtube.com/*"]
  },
  "browser_action": {
    "default_icon": {
      "256": "sound.png"
    },
    "default_title": "Left Right Sound Select",
    "default_popup": "popup.html"
  }
}
