{
  "manifest_version": 2,
  "name": "Left Right Sound Select",
  "version": "0.0.1",
  "permissions": [
    "tabCapture",
    "activeTab"
  ],
  "background":{
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start",
      "js": ["contentscript.js"],
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "256": "sound.png"
    },
    "default_title": "Left Right Sound Select",
    "default_popup": "popup.html"
  }
}
